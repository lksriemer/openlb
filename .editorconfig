root = true

# Unix-style newlines with a newline ending every file
[*.{h,hh,cpp}]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
indent_style = space
indent_size = 2

# Set default charset
charset = utf-8

# Removes any whitespace characters preceding newline characters
trim_trailing_whitespace = true